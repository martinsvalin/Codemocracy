= form_for @user_session, :url => login_path do |f|
  = render :partial => 'layouts/form_errors', :locals => { :errors => @user_session.errors } if @user_session.errors.any?

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.check_box :remember_me
    = f.label :remember_me
  .action
    = f.submit "Login"
