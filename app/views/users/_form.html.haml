= form_for @user do |f|
  = render :partial => 'layouts/form_errors', :locals => { :errors => @user.errors } if @user.errors.any?

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .actions
    = f.submit 'Save'
